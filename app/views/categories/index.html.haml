.col-xs-0.col-sm-1.col-md-1.col-lg-1
.col-xs-12.col-sm-10.col-md-10.col-lg-10
  %table.table.table-responsive.table-striped.table-hover
    %thead.thead-inverse
      %tr
        %th= "#"
        %th= translate("categories.name")
        %th= translate("categories.jewels_number")
        %th= translate("categories.actions")
    %tbody
      - @categories.each_with_index do |category, index|
        %tr
          %td= index + 1
          %td= category.name
          %td= @categories_hash[category.id] || 0
          %td
            %span
              = link_to category_path(category.id), method: :delete, data: {confirm: translate("confirmation")} do
                %i.fa.fa-trash
            %span
              = link_to edit_category_path(category.id) do
                %i.fa.fa-pencil
