= form_for @new_address, url: send_order_path(), method: :post do |f|
  .row
    .col-xs-0.col-sm-1.col-md-2.col-lg-2
    .col-xs-12.col-sm-10.col-md-8.col-lg-8
      = f.text_field :country, class: "form-control", placeholder: translate("address.country")

  .row
    .col-xs-0.col-sm-1.col-md-2.col-lg-2
    .col-xs-12.col-sm-10.col-md-8.col-lg-8
      = f.text_field :region, class: "form-control", placeholder: translate("address.region")

  .row
    .col-xs-0.col-sm-1.col-md-2.col-lg-2
    .col-xs-12.col-sm-10.col-md-8.col-lg-8
      = f.text_field :city, class: "form-control", placeholder: translate("address.city")

  .row
    .col-xs-0.col-sm-1.col-md-2.col-lg-2
    .col-xs-12.col-sm-10.col-md-8.col-lg-8
      = f.text_field :street, class: "form-control", placeholder: translate("address.street")

  .row
    .col-xs-0.col-sm-1.col-md-2.col-lg-2
    .col-xs-12.col-sm-10.col-md-8.col-lg-8
      = f.text_field :street_number, class: "form-control", placeholder: translate("address.street_number")

  .row
    .col-xs-0.col-sm-1.col-md-2.col-lg-2
    .col-xs-12.col-sm-10.col-md-8.col-lg-8
      = f.text_field :postal_code, class: "form-control", placeholder: translate("address.postal_code")

  .row
    .col-xs-0.col-sm-1.col-md-2.col-lg-2
    .col-xs-12.col-sm-10.col-md-8.col-lg-8
      = f.text_field :floor, class: "form-control", placeholder: translate("address.floor")

  .row
    .col-xs-0.col-sm-1.col-md-2.col-lg-2
    .col-xs-12.col-sm-10.col-md-8.col-lg-8
      = f.text_field :apartment, class: "form-control", placeholder: translate("address.apartment")

  = f.submit translate("order.send"), class: "btn btn-info red_button"